@using DomesticExpense.Models
@model TransactionViewModels
@{
    ViewData["Title"] = "Gastos";
    Layout = "~/Views/Shared/_MasterPageSitie.cshtml";
}

<div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
        <h3>Listado de Gastos</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
        <div class="form-group">
            <a class="btn btn-success" href="" title="Nuevo" onclick="return ShowModalAdd()"><i class="fas fa-plus-circle"></i> Nuevo Gasto</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" onclick="FilterBy(this);" name="nRadioFilter" id="idRadioFilterDay" value="day">
            <label class="form-check-label" for="inlineRadio1">DIARIO</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" onclick="FilterBy(this);" name="nRadioFilter" id="idRadioFilterMonth" value="month">
            <label class="form-check-label" for="inlineRadio2">MENSUAL</label>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed table-hover">
                <thead class="thead-dark">
                    <th scope="col">Fecha</th>
                    <th scope="col">Monto</th>
                    <th scope="col">En</th>
                    <th scope="col">Tipo</th>
                </thead>
                <tbody>
                @foreach (var item in Model.Transactions)
                {
                    <tr>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>@item.Amount</td>
                        <td>@item.Concept.Name</td>
                        <td>@item.TransactionType</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="form-group row">
    <label for="inputPassword" class="col-3 col-md-2 col-form-label"><strong>Total $</strong></label>
    <div class="col-4 col-md-3">
        <input type="text" class="form-control" value="@Model.TotalTransactions.ToString()" disabled>
    </div>
</div>

<div id="divMisModales">

    <div class="modal fade modal-slide-in-right" aria-hidden="true" role="dialog" tabindex="-1" id="modal-add">
        @using (Html.BeginForm("AddTransaction", "Transactions", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h4 class="modal-title">Nuevo Concepto: 
                        </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group row">
                            <label for="colFormLabel" class="col-sm-2 col-form-label">Fecha</label>
                            <div class="col-sm-5">
                                <input type="date" id="idInputDate" name="nInputDate" value="@DateTime.Now.ToString("yyyyy-MM-dd")" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabel" class="col-sm-2 col-form-label">Concepto</label>
                            <div class="col-sm-8">
                                <select name="nSelectConcept" class="custom-select">
                                    @foreach (var item in Model.Concepts)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabel" class="col-sm-2 col-form-label">Monto</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="nInputAmount">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">

    var FilterBy = function (myRadio) {
        currentValue = myRadio.value;
        $(location).attr('href', '/Transactions/Index?filter=' + currentValue);
    }

    var ShowModalAdd = function () {
        $("#modal-add").modal("show");
        return false;
    };

    $(document).ready(function () {
        SetValueToRadio();
    });

    var SetValueToRadio = function() {
        var radios = $('input:radio[name=nRadioFilter]');
        radios.filter('[value=@Model.filterBy]').prop('checked', true);
    }
</script>


